---
const {title} = Astro.props;
import Header from "../pages/Header.astro"
import NavBarLeft from "../pages/NavBarLeft.astro";
import NavBarRight from "../pages/NavBarRight.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/imgComida.jpg" />
		<link
		href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
		rel="stylesheet"
	/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main>
			<Header />
			<NavBarLeft />
			<slot />
			<!-- <Footer /> -->
		</main>
		
	</body>
</html>

<style>
	*{
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	html{
		background: #f5f5f5;
		overflow-y: scroll;
	}
</style>
