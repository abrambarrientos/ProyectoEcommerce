---
import {SignIn,SignOut} from "auth-astro/components";
import {getSession} from "auth-astro/server";
const session = await getSession(Astro.request);
---


<header class="w-full h-auto border-b-2 border-gray-300 z-50 fixed">
    <nav class="w-full h-auto flex items-center justify-between p-5 bg-white shadow-sm flex-col md:flex-row ">
        <div class="w-full flex gap-5 items-center justify-start flex-row md:flex-row">
            <h1 class="text-2xl md:text-lg font-bold" >Resto POS</h1>
            <input 
            type="search"
            placeholder="Busca tus productos..."
            class="w-full md:w-1/2 ml-3 px-2 rounded-md bg-[#f5f5f5] size-10"
            >
        </div>
        <div class="w-full flex gap-5 items-center justify-start md:justify-end flex-row md:flex-row mt-5 md:mt-0">
            <a href="#" class="w-auto h-auto bg-[#FC8019] 
                            p-2 rounded-md text-white transition hover:scale-105">
                <i class="ri-table-alt-line">Selecciona tu mesa</i>
            </a>
            {
                session ?(
                    <>
                    <p>{session.user?.name} </p>
                    <SignOut  class="w-auto h-auto p-2 bg-gray-200 rounded-md transition-all hover:scale-110"><i class="ri-logout-box-line"></i></SignOut>
                </>
                ) : (
                <>
                <a href="Login" class="w-auto h-auto p-2 bg-gray-200 rounded-md transition-all hover:scale-110"><i class="ri-user-line"></i></a>
                </>
                )
            }
        </div>
    </nav>
</header>

